{
  "name": "node-sass-test",
  "private": true,
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:css": "node-sass src/style.scss dest/style.css $(find node_modules -type d | awk '{ printf \"--include-path \"$0\" \" }')",
    "build:html": "jade src/index.jade -o dest",
    "build:js": "browserify src/main.js -o dest/bundle.js",
    "start": "node server.js"
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "browserify-shim": "^3.8.12",
    "jade": "^1.11.0",
    "node-sass": "^3.4.2",
    "npm-run-all": "^1.5.1"
  },
  "dependencies": {
    "node-static": "^0.7.7",
    "spectrum-colorpicker": "^1.8.0"
  },
  "browser": {
    "spectrum-colorpicker": "./node_modules/spectrum-colorpicker/spectrum.js"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "jquery": "global:$"
  }
}
